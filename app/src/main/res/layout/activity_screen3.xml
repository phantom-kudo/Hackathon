<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screen3">

        <ImageView
            android:id="@+id/HospitalImage"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="12dp"
            android:src="@drawable/apollo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/HospitalImage"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:text="Picture Not Available"
            android:textColor="@color/blue"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/contact_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/HospitalImage"
            android:layout_margin="10dp">

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></Space>

            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/ic_baseline_add_ic_call_24"
                android:background="@color/button_blue"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></Space>

            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/ic_baseline_directions_24"
                android:background="@color/button_blue"
                />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></Space>

            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/ic_baseline_share_24"
                android:background="@color/button_blue"
                />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></Space>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/availability"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/contact_options"
            android:layout_margin="12dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_margin="2dp"
                    android:layout_weight="18"
                    android:background="@drawable/icu_background"
                    android:src="@drawable/icu" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="72"
                    android:background="@color/blue_theme"
                    android:gravity="center"
                    android:text="ICU"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/icu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="18"
                    android:background="@color/blue_theme"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_margin="2dp"
                    android:layout_weight="18"
                    android:background="@drawable/my_castom_background"
                    android:src="@drawable/ic_baseline_single_bed_24" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="72"
                    android:gravity="center"
                    android:text="Normal Bed"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/normal_bed"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="18"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_margin="2dp"
                    android:layout_weight="18"
                    android:background="@drawable/blood_background"
                    android:src="@drawable/blood" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="72"
                    android:background="@color/blue_theme"
                    android:gravity="center"
                    android:text="Blood"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/blood"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="18"
                    android:background="@color/blue_theme"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_margin="2dp"
                    android:layout_weight="18"
                    android:background="@drawable/my_castom_background"
                    android:src="@drawable/oxygen" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="72"
                    android:gravity="center"
                    android:text="Oxygen"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/oxyzen"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="18"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
